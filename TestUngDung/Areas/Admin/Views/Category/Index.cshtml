@model IEnumerable<ModelEF.Model.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    <i class="fa fa-book">&nbsp;</i>
    Quản lý Danh Mục
}
<div class="card-header" style="display: flex; justify-content : space-between; align-items: center;">
    <div>
        <i class="fa fa-user"></i>
        <strong class="card-title mb-0">Danh Mục</strong>
    </div>
    <button>@Html.ActionLink("Thêm danh mục", "CreateCategory") </button>
</div>

<div class="table-responsive table--no-card m-b-30">
    <table class="table table-striped table-bordered table-striped table-earning">
        <thead>
            <tr class="text-center">
                <th>ID</th>
                <th>Tên danh mục</th>
                <th class="col-md-6">Miêu tả</th>
                <th>Thao tác</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row_@item.ID">
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { @id = item.ID }) |
                        @Html.ActionLink("Xóa", "Delete", new { @id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
</div>
            
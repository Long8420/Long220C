@model IEnumerable<ModelEF.Model.UserAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    <i class="fa fa-user">&nbsp;</i>
    Quản lý tài khoản
}
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3" style="display: flex; justify-content:space-between;
            align-items:center;">
                    <strong>Danh sách người dùng</strong>
                    @Html.ActionLink("Tạo mới", "CreateUser", "UserAccount", new { @class = "btn btn-primary" })
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "UserAccount", FormMethod.Get))
                    {
                        <div class="row">
                            <div class="col-lg-12 form-group" style="display: flex;">
                               
                            </div>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr class="text-center">
                                    <th>ID</th>
                                    <th>Tên đăng nhập</th>
                                    <th>Mật khẩu</th>
                                    <th>Trạng thái</th>
                                 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center" id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Username</td>
                                        <td>@item.Password</td>
                                        <td>@item.Status</td>
                                       </tr>
                                }
                            </tbody>
                        </table>
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
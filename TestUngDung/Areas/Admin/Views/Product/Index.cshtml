@model IEnumerable<ModelEF.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    <i class="fa fa-product-hunt">&nbsp;</i>
    Quản lý Sản Phẩm
}
<div class="card-header" style="display: flex; justify-content : space-between; align-items: center;">
    <div>
        <i class="fa fa-user"></i>
        <strong class="card-title mb-0">Sản phẩm</strong>
    </div>
    <button>@Html.ActionLink("Thêm sản phẩm", "CreateProduct") </button>
</div>
<div class="table-responsive table--no-card m-b-30">
     <div class="table-responsive">
    <table class="table table-striped table-bordered table-striped table-earning">
        <tr>
            <th>ID</th>
            <th class="col-md-2">Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th >Chất lượng </th>
            <th >Hình ảnh </th>
            <th>Loại danh mục</th>
            <th>Miêu tả</th>
            <th>Tình trạng</th>
            <th>Thao tác</th>
            
        </tr>
        @{ var i = 1;}
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.UnitCost
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.Image
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.ProductType
            </td>
            <td >
                @Html.ActionLink("Sửa", "EditProduct", new { @id = item.ID }) |
                @Html.ActionLink("Xem chi tiết", "Detail", new { @id = item.ID })|
                @Html.ActionLink("Xóa", "Delete", new { @id = item.ID })
                              
            </td>
        </tr>
            i++;
        }
        
    </table>
    </div>